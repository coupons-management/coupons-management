<update id="updateCategoryMessageStatus" parameterType="String">
		UPDATE T_MESSAGE_CATEGORY
		set status=1
	   WHERE PK_ID=#{id}
	</update>
	
	<update id="updateStoreMessageStatus" parameterType="String">
