		(PK_ID,MESSAGE_BODY,CREATE_TIME)
		VALUES
		(#{pkId},#{messageBody},now())
	</insert>
	
	
	<insert id="insertStoreMessages" 	parameterType="com.gopher.system.model.entity.TMessage">
